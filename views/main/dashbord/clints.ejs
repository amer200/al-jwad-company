        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">عرض/تعديل</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/add-clint" method="post">
                    <div class="mb-3">
                        <input type="text" class="form-control" value="عامر مصطفى" placeholder="اسم العميل">
                    </div>
                    <div class="mb-3">
                        <input type="text" class="form-control" value="01152306375" placeholder="رقم الجوال">
                    </div>

                    <div class="mb-3">
                        <input type="text" class="form-control" value="aswan" placeholder="العنوان اسم الشارع/ الحي">
                    </div>
                    <div class="mb-3">
                        <input type="text" class="form-control" value="aswan" placeholder="الموقع المدينة - المحافظة">
                    </div>
                    <div class="mb-3">
                        <textarea name="details" class="form-control" cols="30" rows="5"
                            placeholder="المزيد من التفاصيل"></textarea>
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn btn-dark"> حفظ</button>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>