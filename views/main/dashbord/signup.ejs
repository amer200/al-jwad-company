<%- include('./includes/head') -%>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
    <link rel="stylesheet" href="/dashbord/css/signup.css">
    <section class="vh-100" style="background-color: #ddd;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card" style="border-radius: 1rem;">
                        <div class="row g-0">
                            <div class="col-md-12 col-lg-12 d-flex align-items-center">
                                <div class="card-body text-black" style="overflow-y: scroll;
    height: 500px; padding-top: 0px;">

                                    <form action="/signup" method="post" id="myForm">

                                        <div class="d-flex align-items-center mb-3 pb-1">
                                            <img src="/imgs/logo.jpeg" style="width: 180px;
                                                    height: 165px;" alt="logo">
                                        </div>

                                        <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">تسجيل حساب جديد
                                            / <a href="/login" style="text-decoration: none;">تسجيل دخول</a>
                                        </h5>
                                        <% if(msg){ %>
                                            <div class="mb-3">
                                                <label for="err" class="form-label" style="color: red;">
                                                    <%= msg %>
                                                </label>
                                            </div>
                                            <%}%>
                                                <div class="form-outline mb-4"
                                                    style="width: 45%; display: inline-block; margin: 5px;">
                                                    <input type="text" id="name" class="form-control form-control-lg"
                                                        name="stroreName" required />
                                                    <label class="form-label" for="form2Example11">اسم المتجر</label>
                                                </div>
                                                <div class="form-outline mb-4 number-box">
                                                    <input type="number" id="number"
                                                        class="form-control form-control-lg" min="0" name="number"
                                                        required/>
                                                    <label class="form-label phone-label" for="form2Example12">الجوال</label>
                                                </div>
                                                <div class="form-outline mb-4" style="width: 91%; margin: 10px;">
                                                    <input type="email" id="email" class="form-control form-control-lg"
                                                        name="email" required />
                                                    <label class="form-label" for="form2Example17">الايميل</label>
                                                </div>
                                                <div class="form-outline mb-4"
                                                    style="width: 45%; display: inline-block; margin: 5px;">
                                                    <input type="password" id="password1"
                                                        class="form-control form-control-lg" name="password" required />
                                                    <i class="fa-solid fa-eye"
                                                        onclick="changePasswordVisabality('password1')"></i>
                                                    <label class="form-label" for="form2Example27">كلمة المرور</label>
                                                </div>
                                                <div class="form-outline mb-4"
                                                    style="width: 45%; display: inline-block; margin: 5px;">
                                                    <input type="password" id="password2"
                                                        class=" form-control form-control-lg" name="password2"
                                                        required />
                                                    <i class="fa-solid fa-eye"
                                                        onclick="changePasswordVisabality('password2')"></i>
                                                    <label class="form-label" for="form2Example23"> تأكيد كلمة
                                                        المرور</label>
                                                </div>
                                                <div class="form-outline mb-4"
                                                    style="width: 45%; display: inline-block; margin: 5px;">
                                                    <input type="text" id="street" class="form-control form-control-lg"
                                                        name="street" placeholder="اسم الشارع/ اسم الحي" required />
                                                    <label class="form-label" for="form2Example11">العنوان</label>
                                                </div>
                                                <div class="form-outline mb-4"
                                                    style="width: 45%; display: inline-block; margin: 5px;">
                                                    <input type="text" id="location"
                                                        class="form-control form-control-lg" name="location"
                                                        placeholder="المدينة/المحافظة" required />
                                                    <label class="form-label" for="form2Example11">الموقع</label>
                                                    <ul class="list-group d-none" id="cities">
                                                    </ul>
                                                </div>
                                                <div class="pt-1 mb-4">
                                                    <button class="btn btn-dark btn-lg btn-block" type="button"
                                                        onclick="submitForm()">تسجيل</button>
                                                </div>

                                                <!-- <a class="small text-muted" href="#!">Forgot password?</a> -->
                                                <!-- <p class="mb-5 pb-lg-2" style="color: #393f81;">Don't have an account? <a
                                                href="#!" style="color: #393f81;">Register here</a></p>
                                        <a href="#!" class="small text-muted">Terms of use.</a>
                                        <a href="#!" class="small text-muted">Privacy policy</a> -->
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script>
        const phoneInputField = document.querySelector("#number");
        const phoneInput = window.intlTelInput(phoneInputField, {
            initialCountry: "SA",
            utilsScript:
                "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js",
        });
    </script>
    <script src="/dashbord/js/signup.js"></script>
    <%- include('./includes/footer') -%>