<%- include('./includes/head') -%>
    <section class="vh-100" style="background-color: #ddd;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card" style="border-radius: 1rem;">
                        <div class="row g-0">
                            <div class="col-md-6 col-lg-5 d-none d-md-block">
                                <img src="/imgs/man.jpg" alt="login form" class="img-fluid"
                                    style="border-radius: 1rem;" />
                            </div>
                            <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                <div class="card-body p-4 p-lg-5 text-black" style="    overflow-y: scroll;
    height: 500px;">

                                    <form action="/signup" method="post" id="myForm">

                                        <div class="d-flex align-items-center mb-3 pb-1">
                                            <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                            <span class="h1 fw-bold mb-0">Logo</span>
                                        </div>

                                        <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">تسجيل حساب جديد
                                            / <a href="/login" style="text-decoration: none;">تسجيل دخول</a>
                                        </h5>
                                        <div class="form-outline mb-4">
                                            <input type="text" id="name" class="form-control form-control-lg"
                                                name="storName" required />
                                            <label class="form-label" for="form2Example11">اسم المتجر</label>
                                        </div>
                                        <div class="form-outline mb-4">
                                            <input type="number" id="number" class="form-control form-control-lg"
                                                min="0" name="number" required />
                                            <label class="form-label" for="form2Example12">الجوال</label>
                                        </div>
                                        <div class="form-outline mb-4">
                                            <input type="email" id="email" class="form-control form-control-lg"
                                                name="email" required />
                                            <label class="form-label" for="form2Example17">الايميل</label>
                                        </div>

                                        <div class="form-outline mb-4">
                                            <input type="password" id="password1" class="form-control form-control-lg"
                                                name="password" required />
                                            <label class="form-label" for="form2Example27">كلمة المرور</label>
                                        </div>
                                        <div class="form-outline mb-4">
                                            <input type="password" id="password2" class=" form-control form-control-lg"
                                                name="password2" required />
                                            <label class="form-label" for="form2Example23"> تأكيد كلمة المرور</label>
                                        </div>
                                        <div class="form-outline mb-4">
                                            <input type="text" id="street" class="form-control form-control-lg"
                                                name="street" placeholder="اسم الشارع/ اسم الحي" required />
                                            <label class="form-label" for="form2Example11">العنوان</label>
                                        </div>
                                        <div class="form-outline mb-4">
                                            <input type="text" id="location" class="form-control form-control-lg"
                                                name="location" placeholder="المدينة/المحافظة" required />
                                            <label class="form-label" for="form2Example11">الموقع</label>
                                        </div>
                                        <div class="pt-1 mb-4">
                                            <button class="btn btn-dark btn-lg btn-block" type="button"
                                                onclick="submitForm()">تسجيل</button>
                                        </div>

                                        <!-- <a class="small text-muted" href="#!">Forgot password?</a> -->
                                        <!-- <p class="mb-5 pb-lg-2" style="color: #393f81;">Don't have an account? <a
                                                href="#!" style="color: #393f81;">Register here</a></p>
                                        <a href="#!" class="small text-muted">Terms of use.</a>
                                        <a href="#!" class="small text-muted">Privacy policy</a> -->
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <%- include('./includes/footer') -%>