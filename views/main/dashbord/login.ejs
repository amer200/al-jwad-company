<%- include('./includes/head') -%>
    <section class="vh-100" style="background-color: #ddd;">
        <div class="container  h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card" style="border-radius: 1rem;">
                        <div class="row g-0">
                            <div class="col-md-12 col-lg-12 d-flex align-items-center">
                                <div class="card-body text-black" style="height: 590px;
                                padding: 0 25px;">

                                    <form action="/login" method="post" id="myForm">
                                        <div class="d-flex align-items-center mb-3 pb-1">
                                            <!-- <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i> -->
                                            <!-- <span class="h1 fw-bold mb-0">Logo</span> -->
                                            <img src="/imgs/logo.jpeg" style="width: 180px;
                                                    height: 165px;" alt="logo">
                                        </div>
                                        <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">تسجيل دخول
                                            / <a href="/signup" style="text-decoration: none;">تسجيل حساب
                                                جديد</a>
                                        </h5>
                                        <% if(msg){ %>
                                            <div class="mb-3">
                                                <label for="err" class="form-label" style="color: red;">
                                                    <%= msg %>
                                                </label>
                                            </div>
                                            <%}%>
                                                <div class="form-outline mb-4">
                                                    <input type="email" id="email" class="form-control form-control-lg"
                                                        name="email" required />
                                                    <label class="form-label" for="form2Example17">الايميل</label>
                                                </div>

                                                <div class="form-outline mb-4">
                                                    <input type="password" id="password1"
                                                        class="form-control form-control-lg" name="password" required />
                                                    <label class="form-label" for="form2Example27">كلمة المرور</label>
                                                </div>
                                                <div class="pt-1 mb-4">
                                                    <button class="btn btn-dark btn-lg btn-block" type="button"
                                                        onclick="submitLoginForm()">دخول</button>
                                                    <a class="text-muted" href="#" style="display: block;">نسيت كلمة
                                                        المرور</a>
                                                </div>

                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <%- include('includes/footer') -%>